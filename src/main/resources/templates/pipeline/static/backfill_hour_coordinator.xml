<coordinator-app xmlns="uri:oozie:coordinator:0.4" name="${product_name}_${owner}_backfill_hour" frequency="${coord:hours(1)}" start="${backfill_start_time}" end="${backfill_end_time}" timezone="UTC">
  <controls>
    <timeout>-1</timeout>
    <concurrency>${parallel_hour}</concurrency>
    <execution>FIFO</execution>
  </controls>
  <datasets>
    <dataset name="input_dataset" frequency="${coord:hours(1)}" initial-instance="${backfill_start_time}" timezone="UTC">
      <uri-template>${hcat_uri}/${in_database}/${in_hour_table}/${in_hour_partition}</uri-template>
    </dataset>
    <dataset name="out_dir" frequency="${coord:hours(1)}" initial-instance="${backfill_start_time}" timezone="UTC">
      <uri-template>hdfs://${hdfs_output_path}/${table}_${YEAR}_${MONTH}_${DAY}_${HOUR}</uri-template>
    </dataset>
  </datasets>
  <input-events>
    <data-in name="INPUT_DATASET" dataset="input_dataset">
      <instance>${coord:current(0)}</instance>
    </data-in>
  </input-events>
  <output-events>
    <data-out name="OUT_DIR" dataset="out_dir">
      <instance>${coord:current(0)}</instance>
    </data-out>
  </output-events>
  <action>
    <workflow>
      <app-path>${project_path}/backfill_hour/workflow.xml</app-path>
      <configuration>
        <property>
          <name>out_dir</name>
          <value>${coord:dataOut('OUT_DIR')}</value>
        </property>
        <property>
          <name>year</name>
          <value>${coord:formatTime(coord:nominalTime(),'yyyy')}</value>
        </property>
        <property>
          <name>month</name>
          <value>${coord:formatTime(coord:nominalTime(),'MM')}</value>
        </property>
        <property>
          <name>day</name>
          <value>${coord:formatTime(coord:nominalTime(),'dd')}</value>
        </property>
        <property>
          <name>hour</name>
          <value>${coord:formatTime(coord:nominalTime(),'HH')}</value>
        </property>
        <property>
          <name>nominal_time</name>
          <value>${coord:nominalTime()}</value>
        </property>
      </configuration>
    </workflow>
  </action>
</coordinator-app>
